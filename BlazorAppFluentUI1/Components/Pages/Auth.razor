@page "/auth"

@using Microsoft.AspNetCore.Authorization

@attribute [Authorize]

<PageTitle>Auth</PageTitle>

<h1>You are authenticated</h1>

<AuthorizeView>
    Hello @context.User.Identity?.Name!
    <ul>

    @foreach (var claim in @context.User.Claims)
    {
            <li>@claim.Type | @claim.Value</li>
    }
    </ul>
</AuthorizeView>
